---
const BASE_URL = "/ai-welding";

const links = [
  { href: "/", label: "Home" },
  { href: "/about_ai", label: "About AI" },
  { href: "/quizzes", label: "Quizzes" },
  { href: "/resources", label: "Resources" },
];
---

<nav class="navbar">
  <div class="container">
    <div class="logo">
      <a href={BASE_URL + "/"}>AI for Welding Engineers</a>
    </div>
    <button class="menu-toggle" aria-label="Toggle navigation">â˜°</button>
    <div class="dropdown">
      <ul class="nav-links">
        {
          links.map((link) => (
            <li>
              <a href={BASE_URL + link.href}>{link.label}</a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</nav>

<style>
  .navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    background-color: #f5f5f5;
    border-bottom: 1px solid #ddd;
    position: relative;
  }
  .container {
    display: flex;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    align-items: center;
    position: relative;
  }
  .logo a {
    font-size: 1.5rem;
    font-weight: bold;
    color: #000;
    text-decoration: none;
    margin-right: 2rem;
  }
  .menu-toggle {
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    position: absolute;
    right: 2rem;
    z-index: 1000;
  }
  .dropdown {
    position: absolute;
    top: 100%;
    right: 0;
    display: none; /* Hidden by default */
    background-color: #f5f5f5;
    border: 1px solid #ddd;
    width: 200px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    border-radius: 5px;
  }
  .dropdown.show {
    display: block;
  }
  .nav-links {
    list-style: none;
    padding: 0.5rem 0;
    margin: 0;
  }
  .nav-links li {
    padding: 0.5rem 1rem;
  }
  .nav-links li a {
    text-decoration: none;
    color: #333;
    font-size: 1rem;
  }
  .nav-links li a:hover {
    color: #000;
    background-color: #eee;
    border-radius: 4px;
  }
  @media (min-width: 768px) {
    .menu-toggle {
      display: none; /* Hide the menu toggle button on larger screens */
    }
    .dropdown {
      display: block;
      position: static;
      background: none;
      box-shadow: none;
      border: none;
      width: auto;
    }
    .nav-links {
      display: flex;
      gap: 1.5rem;
    }
    .nav-links li {
      padding: 0;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const menuToggle = document.querySelector(".menu-toggle");
    const dropdown = document.querySelector(".dropdown");

    if (menuToggle && dropdown) {
      menuToggle.addEventListener("click", () => {
        dropdown.classList.toggle("show");
      });
    }
  });
</script>
