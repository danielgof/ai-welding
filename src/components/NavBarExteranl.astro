---
const links = [
  { href: "/", label: "Home" },
  { href: "/about_ai", label: "About AI" },
  { href: "/quizzes", label: "Quizzes" },
  { href: "/schedule.pdf", label: "Resources" },
  { href: "/placeholder", label: "Contact" },
];
---

<nav class="navbar">
  <div class="container">
    <div class="logo">
      <a href="/">Introduction to AI</a>
    </div>
    <ul class="nav-links">
      {
        links.map((link) => (
          <li>
            <a href={link.href}>{link.label}</a>
          </li>
        ))
      }
    </ul>
  </div>
</nav>

<style>
  .navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    background-color: #f5f5f5;
    border-bottom: 1px solid #ddd;
  }
  .container {
    display: flex;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    align-items: center;
  }
  .logo a {
    font-size: 1.5rem;
    font-weight: bold;
    color: #000; /* Black text color */
    text-decoration: none;
  }
  .nav-links {
    display: flex;
    list-style: none;
    gap: 1.5rem;
  }
  .nav-links a {
    color: #333; /* Dark gray text color */
    text-decoration: none;
    font-size: 1rem;
  }
  .nav-links a:hover {
    color: #000; /* Text color on hover */
  }
  .search-bar {
    margin-left: auto;
  }
  .search-bar input {
    padding: 0.5rem;
    border-radius: 4px;
    border: 1px solid #ccc;
  }
  @media (max-width: 768px) {
    .nav-links {
      display: none;
    }
    .search-bar {
      display: none;
    }
  }
</style>
