    font-size: 1.2rem;
    margin-bottom: 0.5rem;
    color: #3245ff;
  }

  li ol {
    list-style-type: lower-alpha;
    padding-left: 1.5rem;
  }

  li ol li {
    margin-bottom: 0.5rem;
  }

  input[type="radio"] {
    margin-right: 0.5rem;
  }

  /* Button Styles */
  button.alert {
    display: block;
    width: 200px;
    margin: 2rem auto;
    padding: 0.75rem 1rem;
    font-size: 1rem;
    color: #fff;
